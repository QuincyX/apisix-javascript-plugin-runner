{
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "inlineSourceMap": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "dist",
      "target": "ES2020"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "examples"]
}